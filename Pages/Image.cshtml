@page "/{id}"
@model DisplayImageModel
@{
    ViewData["Title"] = "Display Image";
}

<!-- Hero content: will be in the middle -->
<div class="hero-body">
    <div class="container has-text-centered">

        @if (Model.ImageUrl != null)
        {
            <img class="snapshot-img" src="@Model.ImageUrl" alt="Image" />
        }
        else
        {
            <p>Image not found.</p>
        }
        <p class="subtitle">@Model.Id</p>
        <div class="button-container">
            <a id="shareButton" class="button color-btn btn-yellow" onclick="copyLink()">
                <span class="icon">
                    <i class="ri-link"></i>
                </span>
                <span class="text">Share</span>
            </a>
            <a class="button color-btn btn-blue">
                <span class="icon">
<i class="ri-file-image-line"></i></span>
                <span>Copy Image</span>
            </a>
            <a class="button color-btn btn-pink">
                <span class="icon">
<i class="ri-download-2-line"></i>
</span>
                <span>Get App</span>
            </a>
        </div>

    </div>
</div>